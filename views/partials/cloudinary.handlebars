<div id="image">
  <button id="upload_widget" class="cloudinary-button">Upload files</button>

  <script
    src="https://widget.cloudinary.com/v2.0/global/all.js"
    type="text/javascript"
  ></script>

  <script type="text/javascript">

    let url; var myWidget = cloudinary.createUploadWidget({ cloudName:
    'du-bootcamp', upload_preset: 'upload-preset', }, (error, result) => { if
    (result.event == "success") { console.log(result.info) url = result.info.url
    } }) document.getElementById("upload_widget").addEventListener("click",
    function () { event.preventDefault(); myWidget.open(); }, false);

  </script>

</div>