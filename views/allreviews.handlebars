 <section class="backgroundImageForest">
        <!-- container div for cards -->
        <div class="container d-flex justify-content-center text-center">
{{#each review as |reviews| }}
<!-- CARD 1 -->
            <div class="card mb-3 mt-3 col-4 m-5">
                <h3 class="card-header bg-primary text-light">{{reviews.campground_name}}</h3>
                <div class="card-body backgroundGray">
                  <h5 class="card-title">{{reviews.city}}</h5>
                  <h6 class="card-subtitle text-muted">{{reviews.state}}</h6>
                </div>

                <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="300" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                  <rect width="100%" height="100%" fill="#868e96"></rect>
                  <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                </svg>

                <ul class="list-group list-group-flush">
                  <li class="list-group-item bg-dark text-light">RATING: <br> {{reviews.rating}}</li>
                  <li class="list-group-item bg-dark text-light">AMENITIES: <br> {{reviews.amenities}}</bt></li>
                  <li class="list-group-item bg-dark text-light">ACCESSIBILITY: <br> {{reviews.accessibility}}</li>
                </ul>

<!-- ACCORDIAN -->
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button collapsed bg-warning text-light text-center" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            Click here to read this review.  
                        </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            {{reviews.review_text}}
                        </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark text-light">
                  PRICE: <br> {{reviews.price}}
                </div>
            </div>

{{/each}}